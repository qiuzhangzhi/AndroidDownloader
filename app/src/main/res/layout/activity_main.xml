<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grasp.downloader.demo.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <Button
            android:id="@+id/download1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_download"
            android:onClick="startDownload"
            />
        <Button
            android:id="@+id/delete1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/remove_file"
            android:onClick="removeFile"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="50dp"
        tools:layout_editor_absoluteX="8dp"

        >
        <Button
            android:id="@+id/download2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_download"
            android:onClick="startDownload"
            />
        <Button
            android:id="@+id/delete2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/remove_file"
            android:onClick="removeFile"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="100dp"
        tools:layout_editor_absoluteX="8dp"

        >
        <Button
            android:id="@+id/download3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_download"
            android:onClick="startDownload"
            />
        <Button
            android:id="@+id/delete3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/remove_file"
            android:onClick="removeFile"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="150dp"
        tools:layout_editor_absoluteX="8dp"

        >
        <Button
            android:id="@+id/download4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_download"
            android:onClick="startDownload"
            />
        <Button
            android:id="@+id/delete4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/remove_file"
            android:onClick="removeFile"
            />

    </LinearLayout>


</LinearLayout>
